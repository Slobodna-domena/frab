<%= form_tag path, method: :get do %>
  <p> Filter by average rating
    <%= select_tag :operator, options_for_select([["=",1],[">",2],["<",3],["<=",4],[">=",5]], params[:operator]), include_blank: true%>
    <%= number_field_tag :rating, params[:rating], min: 1, max: 10, step: 0.01 %> <%= link_to t('clear'),  path %>
  </p>

  <p>Filter by categories</p>
  <div>
    <% @conference.classifiers.each do |classifier| %>
      <input type="checkbox" id="<%= classifier.name %>" name="<%= classifier.name %>" value="<%= classifier.name %>" <% if !params[classifier.name].blank? %> checked <% end %>>
      <label style="float:none" for="<%= classifier.name %>"><%= classifier.name %> (<%= Event.where(event_type: Event::ACADEMIC_CONST).select{|event| event.event_classifiers.map{|evc| evc.classifier}.flatten.uniq.include?(classifier) && event.event_ratings.where(peer: false).blank?}.size %> left)</label><br>
    <% end %>
  </div>
  <br>
  <br>
  <input type="submit"  style="background-color: #5b54a8; color: white; width: 80px" value="Select">
<% end %>
